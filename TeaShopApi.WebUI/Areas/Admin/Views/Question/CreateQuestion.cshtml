@model CreateQuestionDto
@{
    ViewData["Title"] = "CreateQuestion";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni Soru Cevap Girişi</h1>

<form method="post">
    <label>Soru Yazısınız</label>
    <input type="text" asp-for="QuestionDetail" class="form-control" />
    <br />
    <label>Cevabı Yazısınız</label>
    <input type="text" asp-for="AnswerDetail" class="form-control" />
    <br />
    <button class="btn btn-primary">Soruyu Ekle</button>
</form>
